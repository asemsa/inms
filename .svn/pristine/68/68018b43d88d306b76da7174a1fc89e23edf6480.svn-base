<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;

use App\User;
use App\Announcement;
use App\Faq;
use App\Message;

class FacultySVController extends Controller
{
    //
    public function __construct(){
    	$this->middleware('auth');
    }
    
    public function index(){

    	$announcements = Announcement::orderByDesc("id")->take(5)->get();
        $faqs = Faq::all();
    	return view('/facultysv/index')
    		->with('announcements', $announcements)
            ->with('faqs', $faqs);
    }

    /////////////////////
    ////// PROFILE  /////
    /////////////////////
    public function profile_edit(){
        $userinfo = User::find(Auth::user()->id);
        return view('facultysv.profile_edit')
            ->with('userinfo', $userinfo);
    }

    /////////////////////
    ////// MESSAGES /////
    /////////////////////
    public function message_add(){

        $users = User::all();

        return view('facultysv.message_add')
            ->with('users', $users);
    }

    public function message_view(Request $request){
        $getMessage = Message::where('receiverID', $request->id)->groupBy('receiverID')->first();
        $chat_info = Message::where(['senderID' => Auth::user()->id, 'receiverID' => $getMessage->receiverID])->orWhere(['senderID' => $getMessage->receiverID, 'receiverID' => Auth::user()->id])->get();
        

        return view('facultysv.message_add')
            ->with('getMessage', $getMessage)
            ->with('chat_info', $chat_info);
    }
    //END MESSAGES
}

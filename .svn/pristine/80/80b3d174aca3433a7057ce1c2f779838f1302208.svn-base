<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;

use App\User;
use App\Announcement;
use App\Faq;
use App\Logbook;

class IndustrialSVController extends Controller
{
    //
    public function __construct(){
    	$this->middleware('auth');
    }
    
    public function index(){

    	$announcements = Announcement::orderByDesc("id")->take(5)->get();
        $faqs = Faq::all();
    	return view('/industrialsv/index')
    		->with('announcements', $announcements)
            ->with('faqs', $faqs);
    }

    /////////////////////
    ////// PROFILE  /////
    /////////////////////
    public function profile_edit(){
        $userinfo = User::find(Auth::user()->id);
        return view('industrialsv.profile_edit')
            ->with('userinfo', $userinfo);
    }
    //END PROFILE
	
    ///////////////
    /// LOGBOOK ////
    ///////////////
    public function logbook(){
        //baca data logbooks dari database
        $logbooks = Logbook::all();
        return view('facultysv.logbook')
            ->with('logbooks', $logbooks);
    }
    //END LOGBOOK
}
